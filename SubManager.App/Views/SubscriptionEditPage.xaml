<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SubManager.App.ViewModels"
             x:Class="SubManager.App.Views.SubscriptionEditPage"
             Title="Add">
     
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <!-- Avatar -->
            <Image Source="{Binding AvatarPath, Converter={StaticResource AvatarConverter}}"
                   WidthRequest="100"
                   HeightRequest="100"
                   Aspect="AspectFill"
                   HorizontalOptions="Center" />

            <Button Text="Wybierz Avatar" Command="{Binding PickAvatarCommand}" />

            <!-- Nazwa -->
            <Entry Placeholder="Nazwa subskrypcji"
                   Text="{Binding Name}" />

            <!-- Cena -->
            <Entry Placeholder="Cena"
                   Keyboard="Numeric"
                   Text="{Binding Price, StringFormat='{0:F2}'}" />

            <!-- Data Startu -->
            <DatePicker Date="{Binding StartDate}" />

            <!-- Data ZakoÅ„czenia -->
            <DatePicker Date="{Binding EndDate}" />

            <!-- Przyciski Akcji -->
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20">
                <Button Text="Zapisz" Command="{Binding SaveCommand}" />
                <Button Text="Anuluj" Command="{Binding CancelCommand}" />
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>